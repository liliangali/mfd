<!DOCTYPE html>
<html lang="zh_cn">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta http-equiv="pragma" content="no-cache">
<title>coolette mobile</title>
<link rel="stylesheet" type="text/css" href="/static/css/style.css" media="screen">
</head>

<body>
<div class="main"> 
  <!--头部开始-->
  <div class="header clearfix">
    <p class="p1"><a href="javascript:history.go(-1)"><img src="/static/img/hdtb.png" /></a></p>
    <p class="p2">发票信息</p>
  </div>
  <!--头部结束-->

  <div class="fpxx">
   <h1>发票类型</h1>
    <ul class="bk_pt" style="padding-bottom:30px; ">
      <li id="ti_1" class="now_hover" onClick="ceck_pic(1);">不开发票</li>
      <li id="ti_2" class="old_hover" onClick="ceck_pic(2);">普通发票</li>
    </ul>
    <div id="tj_1"></div>
    <div id="tj_2" style="display:none; border-top:1px solid #ddd;">
      <div class="fpxisi">
        <form method="post" id="invoice_form" act="{link app=paycenter act=invoice}">
          <p><span>发票类型</span>增值税普通发票</p>
          <p><span>开具类型</span>
          <select name="i_style">
          <option value="0">个人发票</option>
          <option value="1">企业发票</option>
          </select></p>
          <p><span>发票抬头</span><input name="i_title" id="i_title" type="text" value="" /></p>
          </div>
          </div>

          <div class="bc_sc" style="margin-top:100px;">
          <input type="submit" value="保存" class="input_3">
          </div>
        </form>

  </div>
</div>

<SCRIPT language="javascript" type="text/javascript">
		  function ceck_pic(ix)
		  {
		  	for (i=1;i<3;i++)
			{
				if (i==ix)
				{
					document.getElementById('ti_'+i).className = 'now_hover';
					document.getElementById('tj_'+i).style.display = 'block';
				}
				else
				{
					document.getElementById('ti_'+i).className = 'old_hover'; 
					document.getElementById('tj_'+i).style.display = 'none'; 
				}
			}
		  
		  }
</SCRIPT>

</body>
</html>
