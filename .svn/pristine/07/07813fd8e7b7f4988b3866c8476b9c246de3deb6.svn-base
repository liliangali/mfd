 <div class="ddsize">    <h4 id="p1">尺码及量体信息</h4>    <div class="moniSelect" id="selectSize"> <span class="selected">请选择</span>      <select name="text" class="select" id="Measures">         <option>--请选择--</option>         {foreach from=$measures item=mitem key=mkey}         <option data-n='{$mkey}' value='{$mkey}'>{$mitem}</option>         {/foreach}      </select>    </div>    <div id="setSize">       <!--选择现有数据开始-->      <div class="existing near" id="meaBox_3" style="display:none;">        <ul>            {foreach from=$history item=hitem key=hkey}{* $hkey *}              <li data-id="{$hitem.id}">	            <p class="djname">{$hitem.realname}</p>	            <p class="djtada">{if $hitem.modi_time}{$hitem.modi_time|data:'Y-m-d'}{else}{$hitem.time}{/if}</p>	          </li>            {foreachelse}            暂无历史量体            {/foreach}        </ul>        <input type="hidden" name="history_id" value="" id="history_id" />      </div>      <!--选择现有数据结束-->       <!--去附近门店量体开始-->      <div class="near" id="meaBox_2" style="display:none;">        <ul>          <li> 所在城市&nbsp;            <select name="city" class="selects data region_id" data-id="mendian" id="selectCity" title="所在城市"  validate="required">            {foreach from=$regions item=n key=k}              <option value='{$k}'>{$n}</option>                {/foreach}              </select>          </li>          <li>真实姓名&nbsp;&nbsp;            <input type="text" name="real" class="input data" title="真实姓名" validate="required" />          </li>          <li>手机号码&nbsp;&nbsp;            <input type="text" name="mob" class="input data" title="手机号码" validate="required|phone" />          </li>          <li>预约时间&nbsp;&nbsp;            <input class="Wdate input data" name="atime" type="text" title="预约时间" validate="required" onfocus="WdatePicker({minDate:'%y-%M-{%d+1}'})"/>          </li>        </ul>        <h4>请选择门面店</h4>        <div id="mendian">         {foreach from=$servers item=s name=ss}        <dl><dd {if $smarty.foreach.ss.first}class="selectss"{/if} name="serverid" data-sid="{$s.idserve}">{$s.serve_name}</dd><dt>{$s.mobile}-{$s.linkman}，{$s.region_name}{$s.serve_address}</dt></dl>         {/foreach}          </div>      </div>      <!--去附近门店量体结束-->       <!--预约上门量体开始-->      <div class="near"  id="meaBox_1" style="display:none;">        <ul>          <li> 所在城市&nbsp;            <select name="text" class="selects data"  name="city" title="所在城市" validate="required">              <option value=''>选择城市</option>                {foreach from=$regions item=n key=k}                <option value='{$k}'>{$n}</option>                {/foreach}              </select>          </li>          <li>真实姓名&nbsp;&nbsp;            <input type="text"  name="real" class="input data" title="真实姓名" validate="required" />          </li>          <li>手机号码&nbsp;&nbsp;            <input type="text" name="mob" class="input data" title="手机号码" validate="required|phone" />          </li>          <li>预约时间&nbsp;&nbsp;            <input class="Wdate input data" name="atime" type="text" title="预约时间" validate="required" onfocus="WdatePicker({minDate:'%y-%M-{%d+1}'})"/>          </li>          <li style="width:86%;">详细地址&nbsp;&nbsp;            <input type="text" class="input data" name="addres"  title="详细地址" validate="required"/>          </li>        </ul>      </div>      <!--预约上门量体结束-->       <!--标准尺码开始-->      <div id="sizeTable" class="near"  id="meaBox_4" style="display:none;">        <div>          <p class="tishi">请输入精确的身高、体重、腰围、臀围来获取您的体型数据。<br />            单位：CM</p>          <ul>            <li><span>*</span>身高&nbsp;&nbsp;              <input type="text" class="input" name="height" title="身高" validate="required|number" />            </li>            <li><span>*</span>体重&nbsp;&nbsp;              <input type="text" class="input" title="体重" name="weight"  validate="required|number" />            </li>            <li>&nbsp;&nbsp;&nbsp;腰围&nbsp;&nbsp;              <input type="text" class="input" name="waist"  validate="number"/>            </li>            <li>&nbsp;&nbsp;&nbsp;臀围&nbsp;&nbsp;              <input type="text" class="input" name="hip"  validate="number"/>            </li>              <li>&nbsp;&nbsp;&nbsp;胸围&nbsp;&nbsp;              <input type="text" class="input" name="chest"  validate="number"/>            </li>          </ul>          <a href="#" target="_blank" class="ddnext">下一步</a> </div>        <div style="display:none" id="tixing">          <p class="tishi">请选择以下适合您的一种体型数据</p>          <ul>            <li class="slim" data-tixing="1"></li>            <li class="slim sormal" data-tixing="2"></li>            <li class="slim easy" data-tixing="3"></li>          </ul>        </div>      </div>      <!--标准尺码结束-->     </div>  </div>