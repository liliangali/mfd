<script type="text/javascript">
//<!CDATA[
$(function (){
    var order = '{$smarty.get.order}';
    var arrow = '';

    switch (order){
        case 'credit_value desc' : order = '';
        arrow = '{$lang.down_arrow}';
        break;
        default : order = 'credit_value desc';
    }
    $('#credit_grade').html('{$lang.credit_grade}' + arrow);
    $('#credit_grade').click(function(){query('order', order);return false;});
}
);
function query(name, value){
    $("input[name='"+name+"']").val(value);
    $('#search').submit();
}

$(function(){
		   var OOtime = null;
				$("#quantity_num").click(function(event){
					var e=window.event || event;
					if(e.stopPropagation){
						e.stopPropagation();
					}else{
						e.cancelBubble = true;
					}   
					$("#EellFilterQuantity").addClass("filter-price-hover");
				});
				$("#EellFilterQuantity").click(function(event){
					var e=window.event || event;
					if(e.stopPropagation){
						e.stopPropagation();
					}else{
						e.cancelBubble = true;
					}
				});
				document.onclick = function(){
					$("#EellFilterQuantity").removeClass('filter-price-hover');
				};
				$('.filter-area-text').mousemove(function(){
					clearTimeout(OOtime);
					$('#filter-area-a').addClass('filter-area-text_hover');
					$('#J_FilterArea').show();
				});
				$('#J_FilterArea').mousemove(function(){
					clearTimeout(OOtime);
					$('#J_FilterArea').show();
					$('#filter-area-a').addClass('filter-area-text_hover');
				});
				$('#J_FilterArea').mouseout(function(){ 
				  OOtime = setTimeout(function(){
							 $("#J_FilterArea").hide();
							 $('#filter-area-a').removeClass('filter-area-text_hover');
						   },300); 
				});
				$('.filter-area-text').mouseout(function(){ 
				  OOtime = setTimeout(function(){
							 $("#J_FilterArea").hide();
							 $('#filter-area-a').removeClass('filter-area-text_hover');
						   },300); 
				});
				
	
})



//]]>
</script>
