{include file="header.html"}
<div id="rightTop">
  <ul class="subnav">
    <li><span>{$lang.manage}</span></li>
    <!-- 
    <li><a class="btn1" href="index.php?app=subscribe&amp;act=add">{$lang.add}</a></li>
     -->
  </ul>
</div>

<div class="mrightTop">
  <div class="fontl">
    <form method="get">
       <div class="left">
          <input type="hidden" name="app" value="subscribe" />
          <input type="hidden" name="act" value="index" />
          <select class="querySelect" name="field_name">{html_options options=$query_fields selected=$smarty.get.field_name}
          </select>
          <input class="queryInput" type="text" name="field_value" value="{$smarty.get.field_value|escape}" />
          {$lang.sort_order}:
          <select class="querySelect" name="sort">{html_options options=$sort_options selected=$smarty.get.sort}
          </select>
          <input type="submit" class="formbtn" value="{$lang.query}" />
      </div>
      <!--{if $filtered}-->
      <a class="left formbtn1" href="index.php?app=subscribe">{$lang.cancel_query}</a>
      <!--{/if}-->
    </form>
  </div>
  <div class="fontr">{include file=page.top.html}</div>
</div>
<div class="tdare">
  <table width="100%" cellspacing="0" class="dataTable">
    <!--{if $subscribes}-->
    <tr class="tatr1">
      <td width="20" class="firstCell"><input type="checkbox" class="checkall" /></td>
      <td>{$lang.idsubscribe}</td>
      <td><span ectype="order_by" fieldname="username">{$lang.username}</span></td>
      
      <td>服务点名称 | 注册用户名称</td>
      <td><span ectype="order_by" fieldname="address">{$lang.address}</span></td>
      <td><span ectype="order_by" fieldname="create_date">{$lang.create_date}</span></td>
      <td><span ectype="order_by" fieldname="subscribe_type">{$lang.subscribe_type}</span></td>
      <td><span ectype="order_by" fieldname="mobile">{$lang.mobile}</span></td>
      
      <td><span ectype="order_by" fieldname="state">申请状态</span></td>
      
      <td class="handler">{$lang.handler}</td>
    </tr>
    <!--{/if}-->
    <!--{foreach from=$subscribes item=subscribe}-->
    <tr class="tatr2">
      <td class="firstCell"><input type="checkbox" class="checkitem" value="{$subscribe.idsubscribe}" /></td>
      <td>{$subscribe.idsubscribe|escape} </td>
      <td>{$subscribe.username|escape} </td>
      
      <td>{$subscribe.serve_name|escape} | {$subscribe.user_name|escape}</td>
      <td>{$subscribe.address|escape}</td>
      <td>{$subscribe.create_date}</td>
      <td>
      
      
       {if $subscribe.subscribe_type==0}
      	{$lang.subscribe_type_0}
      {elseif $subscribe.subscribe_type==1}
      	{$lang.subscribe_type_1}
      {/if}
      </td>
      <td>{$subscribe.mobile}</td>
      
      <td>
      {if $subscribe.state==0}
      	{$lang.state_0}
      {elseif $subscribe.state==1}
      	{$lang.state_1}
      {elseif $subscribe.state==2}
      	{$lang.state_2}
      
      {elseif $subscribe.state==3}
      	{$lang.state_3}
      {elseif $subscribe.state==4}
      	{$lang.state_4}
      {elseif $subscribe.state==5}
      	{$lang.state_5}
      	
      	
      {/if}
      
      
      </td>
      
      <td class="handler">
      <span style="width: 100px">
      
      <a href="index.php?app=subscribe&amp;act=edit&amp;id={$subscribe.idsubscribe}">{$lang.edit}</a> 
    
      | <a href="javascript:drop_confirm('{$lang.drop_confirm}', 'index.php?app=subscribe&amp;act=drop&amp;id={$subscribe.idsubscribe}');">{$lang.drop}</a>
        
        
        
      </span>
      </td>
    </tr>
    <!--{foreachelse}-->
    <tr class="no_data">
      <td colspan="10">{$lang.no_data}</td>
    </tr>
    <!--{/foreach}-->
  </table>
  <!--{if $subscribes}-->
  <div id="dataFuncs">
    <div id="batchAction" class="left paddingT15"> &nbsp;&nbsp;
    <!-- 
      <input class="formbtn batchButton" type="button" value="{$lang.drop}" name="id" uri="index.php?app=subscribe&act=drop" presubmit="confirm('{$lang.drop_confirm}');" />
       -->
    </div>
    <div class="pageLinks">{include file=page.bottom.html}</div>
    <div class="clear"></div>
  </div>
  <!--{/if}-->
</div>
{include file="footer.html"}