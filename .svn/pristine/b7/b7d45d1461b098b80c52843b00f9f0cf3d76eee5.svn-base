{include file=header.html}
<link href="{res file=css/z_style.css}" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="{res file=js/jquery.SuperSlide.js}" charset="utf-8"></script>
<script type="text/javascript">
//<!CDATA[
var SITE_URL = "{$site_url}";
var REAL_SITE_URL = "{$real_site_url}";
var REAL_BACKEND_URL = "{$real_backend_url}";
var REGION_URL="{link app=mlselection act=index arg=region}";
reginUrl=REAL_SITE_URL+REGION_URL;
//]]>
</script>
{$_head_tags}
<style>
    
.apply_label, .error_off, .error_on {
	background: url("{res file=images/error_icon.gif}") no-repeat scroll 2px -19px;
    float: left;
    height: 26px;
    line-height: 26px;
}

.apply_label {
    color: #bb422e;
    margin-left: 15px;
	background-position: 0 3px !important;
}
.error_off{
    background-position: 2px -24px !important;
    color: #bb422e;
    float: left;
    margin-left: 15px;
    padding-left: 29px;
}
</style>
<script type="text/javascript">
$(function(){

	$('#timeserve').datepicker({dateFormat: 'yy-mm-dd',minDate:1});
	
	$('#serve_form').validate({
		errorPlacement: function(error, element){
	        $(element).nextAll('.apply_label').removeClass("error_on").addClass("error_off").html(error);
	    },
	    success       : function(label){
	        label.parent().removeClass("error_off").addClass("error_on");
	    },
    rules : {
    	username : {
            required : true
        },mobile : {
            required : true
        },subscribe_type : {
            required : true
        },address : {
            required : true
        },figure_mode : {
            required : true
        }
    },
    messages : {
    	username : {
            required : '{$lang.username_not_empty}'
        },mobile : {
            required : '{$lang.mobile_not_empty}'
        },subscribe_type : {
            required : '{$lang.subscribe_type_not_empty}'
        },address : {
            required : '{$lang.address_not_empty}'
        },figure_mode : {
            required : '{$lang.figure_mode_not_empty}'
        }
    }


    
	});
});

</script>
<!--头部结束-->

<div class="dqwz">当前位置：<a href="#">服务点政策</a><span>></span>免费预约</div>
<!--中间开始-->
<div class="center_box">
  <!--基本信息 start-->
     <div class="basic_box">
         <div class="basic_tab_box" style="border:#ccc 1px solid; background:#fff; padding-top:20px;">
         <form method="post" id="serve_form" name="serve_form">
             <table width="100%" border="0" cellspacing="0" cellpadding="0" class="basic_table">
                <tr>
                <th><div><b class="b2">*</b>联系人：</div></th>
                <td>
                  <div>
                   <input type="text" name="username" id="username" class="input_s int_w238 f_l" />
                   <label class="apply_label"></label>
                  </div>
                </td>
              </tr>
              <tr>
                <th><div><b>*</b>联系电话：</div></th>
                <td>
                  <div>
                   <input type="text" name="mobile" id="mobile" class="input_s int_w238 f_l" maxlength="11" />
                   <label class="apply_label"></label>
                  </div>
                </td>
              </tr>
              
              <tr>
                <th><div><b>*</b>量体时间：</div></th>
                <td>
                  <div>
                   <input type="text" name="timeserve" id="timeserve" class="input_s int_w238 f_l"  />
                   <select id="timeopt" name="timeopt">
					<option value="1"> 上午 </option>
					<option value="2"> 下午 </option>
				   </select>
                   <label class="apply_label"></label>
                  </div>
                </td>
              </tr>
              
              <tr>
                <th><div><b>*</b>预约类型：</div></th>
                <td>
                  <div>
                   
                   <!-- 
                   <input name="subscribe_type" id="subscribe_type_0" type="radio" value="0" class="f_l" style="margin:5px;">
                   <label for="subscribe_type_0" class="f_l" style="margin:5px;">干洗</label>
                    -->
                   <input checked="checked" name="subscribe_type" id="subscribe_type_1" type="radio" value="1" class="f_l" style="margin:5px;">
                   <label for="subscribe_type_1" class="f_l" style="margin:5px;">量体</label>
                   <label class="apply_label"></label>
                  </div>
                </td>
              </tr>
              
              
              
              <tr>
                <th><div><b>*</b>{$lang.figure_mode}：</div></th>
                <td>
                  <div>
                   <input name="figure_mode" id="figure_mode_1" type="radio" value="1" class="f_l" style="margin:5px;">
                   <label for="figure_mode_1" class="f_l" style="margin:5px;">上门</label>
                   <input name="figure_mode" id="figure_mode_2" type="radio" value="2" class="f_l" style="margin:5px;">
                   <label for="figure_mode_2" class="f_l" style="margin:5px;">到店</label>
                   <label class="apply_label"></label>
                  </div>
                </td>
              </tr>
              
              
              <tr>
                <th><div><b class="b1">*</b>地址：</div></th>
                <td>
                  <div>
                   <input type="text" name="address" id="address" class="input_s int_w238 f_l" maxlength="150" />
                   <label class="apply_label"></label>
                  </div>
                </td>
              </tr>
              <tr>
                <th valign="top"><div>备注：</div></th>
                <td>
                  <div>

                   <textarea name="remarks" id="remarks" rows="6" cols="28" class="rem_texta"></textarea>
                   
                  </div>
                </td>
              </tr>
              <tr>
                <th></th>
                <td>
                   <div class="appaly_but_div f_l">
                      <input type="submit" name="button" value="下一步" class="apply_but_sub f_l" />
                      <input type="reset" name="reset" value="取消" class="apply_but_res f_l" />
                    </div>
                </td>
              </tr>
            </table>
            </form>
         </div>
         <div class="blank30"></div>
     </div>
  <!--基本信息 end-->
     
</div>
<!--中间结束-->
<!--底部开始-->
{include file=footer.html}