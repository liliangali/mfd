{include file="header.html"}
<div id="rightTop">
  
  <ul class="subnav">
    <li><span>工艺项</span></li>
  </ul>
</div>
<div class="mrightTop1 info">
  <div class="fontl">
    <form method="get" name="selectcst" id="selectcst">
      <input type="hidden" name="app" value="craft" />
      <input type="hidden" name="act" value="parents" />
      工艺名称:
      <input class="queryInput" type="text" id="name" name="name" value="{$smarty.get.name|escape}" />
        分类:
          <div id="cst_cate" style="display:inline;">
            <select class="querySelect" id="clothingID" name="clothingID">
              <option value="">请选择</option>
              {html_options options=$cloth  selected="$smarty.get.clothingID"}
            </select>
          </div>
      <input type="submit" class="formbtn" value="{$lang.query}" />
    </form>
  </div>
  <div class="fontr">{include file=page.top.html}</div>
</div>
<div class="tdare">
  <table width="100%" cellspacing="0" class="dataTable">
    <tr class="tatr1">
      <td width="20%"><span ectype="order_by" fieldname="id">ID</span></td>
      <td><span>名称</span></td>
      <td><span ectype="order_by" fieldname="clothingID">品类</span></td>
      <td class="table-center"><span ectype="order_by" fieldname="is_active">是否显示</span></td>
      <td>操作</td>
    </tr>
    <!--{foreach from=$list item=lst}-->
    <tr class="tatr2" align="center">
      <td align="center">{$lst.id}</td>
      <td align="center">{$lst.name}</td>
      <td align="center">{$cloth.$lst.clothingID}</td>
      <td class="table-center">
      <!-- {if $lst.is_active} -->
      <img src="{res file=style/images/positive_enabled.gif}" ectype="inline_edit" fieldname="is_active" fieldid="{$lst.ids}" fieldvalue="1" />
      <!--{else}-->
      <img src="{res file=style/images/positive_disabled.gif}" ectype="inline_edit"  fieldname="is_active" fieldid="{$lst.ids}" fieldvalue="0"/>
      <!-- {/if} --></td>
      <td><a href="index.php?app=customs&amp;act=edit&amp;id={$lst.ids}">{$lang.edit}</a></td>
    </tr>
    <!--{/foreach}-->
  </table>
  <div id="dataFuncs">
    <div id="batchAction" class="left paddingT15">
      <input class="formbtn batchButton" type="button" value="{$lang.drop}" name="id" uri="index.php?app=customs&act=drop&ret_page={$page_info.curr_page}" presubmit="confirm('{$lang.drop_confirm}')" />
    </div>
    <div class="pageLinks">{include file=page.bottom.html}</div>
  </div>
  <div class="clear"></div>
</div>
{include file="footer.html"}