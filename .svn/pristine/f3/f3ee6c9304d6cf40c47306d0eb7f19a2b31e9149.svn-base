<!doctype html>
<html>

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1,minimum-scale=1, user-scalable=no, minimal-ui">
		<title>添加顾客</title>
		<link type="text/css" href="http://r.cotte.cn/cotte/m/css/public.css" rel="stylesheet" />
		<link type="text/css" href="http://r.cotte.cn/cotte/m/css/my_customers.css" rel="stylesheet" />
	</head>

	<body>
		<div class="main">
			<!--头部开始-->
			<div class="two_head">
				<div class="wrap">
					<span class="back" onClick="history.go(-1)"></span>
					<h1>添加顾客</h1>
				</div>
				<div class="sta"></div>
			</div>
			<!--头部结束-->
          <form method="post">
			<div class="white_2 gkxb">
				<ul>
					<li><input type="text" value="" name="name" placeholder="顾客姓名" /></li>
					<li><input type="text" value="" name="phone" placeholder="顾客手机" /></li>
				</ul>
			</div>
           <input type="button" value="确定" class="bz"/>
		</form>
		</div>
		<script type="text/javascript" src="{lib file=jquery.min.js}" charset="utf-8"></script>
		<script type="text/javascript" src="{lib file=jquery-1.8.3.min.js}" charset="utf-8"></script>
        <script src="http://r.cotte.cn/global/luck/mobile/luck.js"></script>
<script>

$(".bz").click(function(){
	var name=$("input[name='name']").val();
	var phone=$("input[name='phone']").val();
	$.ajax({
		type:"POST",
		url:"/member-addcustomers.html",
		data:{
			name:name,
			phone:phone,
		},
		success: function(res){
			var res=eval("("+res+")");
			if(res.done==true)
			{
				luck.open({
					content:"添加顾客成功!",
				})
			}else{
				luck.open({
					content:res.msg,
				})
			}
		}
	});

})

</script>
	</body>

</html>