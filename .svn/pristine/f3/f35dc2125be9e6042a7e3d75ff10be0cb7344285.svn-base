{include file="header.html"}
<div id="rightTop">
  <p>用户提现&充值申请</p>
</div>
<div class="mrightTop">
  <div class="fontl">
    <form method="get">
       <div class="left">
          <input type="hidden" name="app" value="apply" />
          <input type="hidden" name="act" value="index" />
          <select class="querySelect" name="type">
          	<option value=0>-=请选择操作类型=-</option>
          	<option value=1 {if $type eq 1}selected{/if}>提现申请</option>
          	<option value=2 {if $type eq 2}selected{/if}>会员充值</option>
          </select>
          用户名：<input class="queryInput" type="text" name="username" value="{$username}" />
          <input type="submit" class="formbtn" value="{$lang.query}" />
      </div>
      <!--{if $filtered}-->
      <a class="left formbtn1" href="index.php?app=user">{$lang.cancel_query}</a>
      <!--{/if}-->
    </form>
  </div>
  <div class="fontr">{include file=page.top.html}</div>
</div>
<div class="tdare">
  <table width="100%" cellspacing="0" class="dataTable">
    <!--{if $apply_list}-->
    <tr class="tatr1">
      <td>申请时间</td>
      <td>类型</td>
      <td>状态</td>
      <td>金额</td>
      <td>用户名</td>
      <td class="handler">{$lang.handler}</td>
    </tr>
    <!--{/if}-->
    <!--{foreach from=$apply_list item=list}-->
    <tr class="tatr2">
      <td width="200">{$list.add_time|date:Y-m-d H:i:s}</td>
      <td>{if $list.type eq 1}提现{else}充值{/if}</td>
      <td>{if $list.status eq 0}未处理{elseif $list.status eq 2}已取消{elseif $list.status eq 3}未通过审核{else}审核通过{/if}</td>
      <td style="color:{if $list.type eq 1}red{else}green{/if}"><b>{$list.money}</b></td>
      <td>{$list.user_name}</td>
      <td class="handler">
      <a href="index.php?app=apply&amp;act=view&amp;id={$list.id}">查看</a>
      </td>
    </tr>
    <!--{foreachelse}-->
    <tr class="no_data">
      <td colspan="6">{$lang.no_data}</td>
    </tr>
    <!--{/foreach}-->
  </table>
  <!--{if $apply_list}-->
  <div id="dataFuncs">
    <div class="pageLinks">{include file=page.bottom.html}</div>
    <div class="clear"></div>
  </div>
  <!--{/if}-->
</div>
{include file="footer.html"}