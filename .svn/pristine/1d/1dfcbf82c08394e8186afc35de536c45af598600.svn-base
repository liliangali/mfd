            <td align="left">是否上线</td>     
            <td>添加时间</td>
            <td>操作</td>
        </tr>
        <!--{/if}-->
        <!--{foreach from=$list item=info}-->
        <tr class="tatr2">
            <td>{$info.facevalue|escape}</td>
            <td>{$info.price|escape}</td>
            <td>{$info.integral|escape}</td>
            <td>{if $info.is_sale}是{else}否{/if}</td>
