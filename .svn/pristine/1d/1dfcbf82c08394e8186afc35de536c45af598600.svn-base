             <a href="javascript:;" onclick="if(confirm('确定删除吗？')) location.href='index.php?app=coinconfig&act=drop&id={$info.id}'">删除</a>
            <a href="index.php?app=coinconfig&act=loadrecord&id={$info.id}">销售纪录</a>
			</td>
        </tr>
        <!--{foreachelse}-->
        <tr class="no_data">
            <td colspan="7">{$lang.no_data}</td>
