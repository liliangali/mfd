<div class="address" id="pet">
  <ul>
    {foreach from=$petlist item=list name=ads}
      <li data-id="{$list.pet_id}">
      <p class="underlined">{$list.name}</p>
      <p>{if $list.gender == 1}公{else}母{/if}</p>
      <p>{$list.region_name}</p>
      <p>{$list.summary}</p>
      <div class="caozuoBtn">
      <input type="button" value="编辑" class="edit" />
      <input type="button" value="删除" class="del" />
      </div>
      </li>
    {/foreach} 
    <li class="syxdz" id="addPet">
    <span>+</span>
    使用新宠物
    </li>
  </ul>
</div>

