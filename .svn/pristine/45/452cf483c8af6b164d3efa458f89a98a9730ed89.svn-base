{literal}
<style type="text/css">
body,td { font-size:13px; height:28px;}
.spxj td { text-align:center; height:32px;  padding:0 10px;}
</style>
{/literal}
{foreach from=$orderArr item=order}
<table width="100%" cellpadding="1">
    <tr>
        <td colspan="2" style="text-align:center; font-size:24px; padding:10px 0;">Mfd.麦富迪商城</td>
    </tr>
    <tr>
        <td>订单编号：</td><td>{$order.order_sn}<!-- 订单号 --></td><td></td>
    </tr>
    <tr>
        <td width="10%">下单时间：</td><td>{$order.add_time|date:complete}</td>
        <td width="10%">发货时间：</td><td>{$order.ship_time|date:complete}</td>
    </tr>
</table>
<table width="100%" border="1" style="border-collapse:collapse;border-color:#000; margin:10px 0;" class="spxj">
    <tr align="center">
        <td bgcolor="#cccccc">商品名称  <!-- 商品名称 --></td>
        <td bgcolor="#cccccc">购买数量<!-- 商品数量 --></td>
        <td bgcolor="#cccccc">RCMTM凭单<!-- 商品数量 --></td>
    </tr>
    <!-- {foreach from=$order.goods item=goods key=key} -->
    <tr>
        <td>&nbsp;{$goods.goods_name}<!-- 商品名称 --></td>
        <td align="right">{$goods.quantity}&nbsp;<!-- 商品数量 --></td>
        <td align="right">{$goods.rcmtm_id}&nbsp;<!-- 商品数量 --></td>
    </tr>
    <!-- {/foreach} -->
</table>
<table width="100%" cellpadding="1">
    <tr>
        <td width="10%">用户名：</td><td>{$order.user_name}</td><td></td>
    </tr>
    <tr>
        <td width="10%">收货人：</td><td>{$order.ship_name}</td><td></td>
    </tr>
     {if $order.shipping_id == 2}
    <tr>
        <td>门店电话：</td><td>{$order.self.mobile}</td>
        <td></td>
    </tr>
     <tr>
        <td width="10%">门店地址：</td><td>{if $order.self.region_name}[{$order.self.region_name}]{/if} {$order.self.serve_address}</td><td></td>
    </tr>
    {else}
     <tr>
        <td width="10%">联系电话：</td><td>{$order.ship_mobile}</td><td></td>
    </tr>
     <tr>
        <td>收货地址：</td><td>[{$order.ship_area}]&nbsp;{$order.ship_addr}&nbsp;<!-- 收货人地址 --></td>
     </tr>
    {/if}
    <tr>
        <td></td><td align="right">谢谢惠顾，欢迎再次光临</td>
     </tr>
</table>
{/foreach}