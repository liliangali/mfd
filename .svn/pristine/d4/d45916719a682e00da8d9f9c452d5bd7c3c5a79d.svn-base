	    	ps:{
				required:true,
				rangelength:[5,80]
			},

			ps_sure:{
				rangelength:[5,80],
				required:true,
				equalTo:"#ps"
			}
	    },
	    messages : {
	    	ps_sure : {
	            required : '确认密码不能为空',
	            equalTo:'两次密码不一致',
