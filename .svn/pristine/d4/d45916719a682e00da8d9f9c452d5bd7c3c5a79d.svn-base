        <li class="on">重置密码<span>3</span></li>
        <li>完成<span>4</span></li>
    </ul>
    <p class="clear"></p>


   <div class="fp_content">

            <form method="post" action="/index.php/member-find_password.html?opt=4" name="" id="mf" class="form_border">
            
            <input type='hidden' name='account_type' value='{$account_type}' />
            <input type='hidden' name='authcode' value='{$authcode}' />
            <input type='hidden' name='account' value='{$account}' />
            
            
                  <table cellpadding="0" cellspacing="0" border="0" class="find_table1">
