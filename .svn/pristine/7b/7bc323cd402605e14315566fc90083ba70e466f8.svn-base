@charset "utf-8";
/* CSS Document */

.w {width:100%; max-width:640px; min-width:320px; overflow:hidden; margin:0 auto;}

/*查看顾客详细*/
.fgx { border-top:1px solid #e5e5e5; border-bottom:1px solid #e5e5e5; background:#f6f6f6; height:10px;}

.jbxx {margin:15px; overflow:hidden;}
.gkbt {font-size:14px; line-height:24px; color:#222; font-weight:normal;}

.jbxx_ul {padding-top:3px; overflow:hidden;}
.jbxx_ul li { float:left; font-size:12px; height:22px; line-height:22px; width:50%; overflow:hidden; color:#717171;}

.ltsj {width:105%;}
.ltsj dt { font-family:Arial; font-size:14px; line-height:26px; color:#222; border-bottom:1px solid #dfdfdf; margin-top:10px;}
.ltsj dd { float:left; color:#717171; font-size:12px; border-bottom:1px solid #dfdfdf; height:36px; line-height:36px; overflow:hidden; width:49%; text-align:center; border-right:1px solid #dfdfdf;}

/*添加顾客*/
.tjgk {margin:30px 15px 0 15px;overflow:hidden; border:solid 1px #ddd; border-radius:8px;}
.tjgk input{width:100%;border-top:1px solid #d7d7d7;padding:18px 0 18px 12px;font-size:14px;border-radius:0px; margin-top:-1px;}
.tiajia{margin:0 15px;}
.tiajia input {width:100%;height:34px;margin:0 auto;margin-top:25px;border:1px solid #21d0fd;border-radius:17px;background:#21d0fd;display:block;color:#fff;-webkit-appearance:none; cursor:pointer;}

/*我的顾客无信息*/
.gukaihd {height:45px; line-height:45px; background:url(/public/static/wap/images/toppic.png) repeat-x;overflow:hidden;}
.gukai {width:80%; height:45px; position:relative;line-height:45px;}
.gukai .p1 { position:absolute; left:15px; top:0px;}
.gukai .p1 img {width:40%;}
.gukai .p2 {font-size:16px; color:#222; padding-left:40px;}
.gukaizj{width:20px;height:20px;background:url(/public/static/wap/images/wddzpic.png)no-repeat;margin:13px 15px 0 0;text-indent:2000px;display:inline;}

.wgkxx {padding:150px 15px 165px 15px; text-align:center; background:url(/public/static/wap/images/wdgk.png) center 150px no-repeat; background-size:70px 70px;}
.wgkxx h1 { margin-top:90px; font-size:16px; font-weight:normal; line-height:22px; color:#222;}
.wgkxx p { color:#717171; font-size:12px; line-height:20px; margin-top:10px;}
.tjsy {margin:0 15px;}
.tjsy input {width:100%; color:#333; border:1px solid #d5d5d5; height:34px; border-radius:25px; background:#fff; cursor:pointer;}

/*我的顾客*/
.wdgklb { border:1px solid #ddd; border-radius:5px; margin:0 15px 20px 15px; background:#fff; overflow:hidden;}
.wdgklb ul { padding:20px 0; overflow:hidden; border-bottom:1px solid #ddd;}
.wdgklb ul li { float:left; height:35px; line-height:35px; width:50%; text-indent:20px; font-size:12px; color:#222;}
.wdgklb ul .ys { color:#717171;}

.scxg {display:box;display:-webkit-box;display:-moz-box; orient: horizontal; width:100%;}
.scxg p {box-flex:1;-webkit-box-flex:1;-moz-box-flex:1; display:block; text-align:center; height:24px; line-height:24px; margin:7px 0;  font-size:12px;}
.scxg p a {color:#717171;}
.scxg .p1 { border-right:1px solid #ddd;}
.scxg p:hover a { color:#21d0fd;}