            <td width="20" class="firstCell"><input type="checkbox" class="checkall" /></td>
            <td align="left">名称</td>
            <td>零售价格</td>
            <td align="left">上架</td>
            <td align="left">平台</td>
            <td>添加时间</td>
            <td>修改时间</td>
            <td>{$lang.handler}</td>
        </tr>
        <!--{/if}-->
        <!--{foreach from=$custom_list item=custom}-->
        <tr class="tatr2">
            <td class="firstCell"><input type="checkbox" class="checkitem" value="{$custom.id}"/></td>
            <td>{$custom.name|escape}</td>
            <td>{$custom.price|price}</td>
            <td>{if $custom.is_sale eq 1}是{else}否{/if}</td>
            <td>{$to_site.$custom.to_site}</td>
            <td>{$custom.add_time|date:complete}</td>
            <td>{$custom.last_time|date:complete}</td>
            <td>
                <a href="../../custom-{$custom.id}.html" target="_blank" style="display:none;">查看</a>
                <a href="index.php?app=custom&amp;act=edit&amp;id={$custom.id}">{$lang.edit}</a>
                <a href="javascript:drop_confirm('{$lang.drop_confirm}', 'index.php?app=custom&amp;act=drop&amp;id={$custom.id}');">{$lang.drop}</a>
			</td>
        </tr>
