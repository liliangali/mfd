<div id="rightTop">
  <ul class="subnav">
    <li><span>{$lang.manage}</span></li>
    <li><a class="btn1" href="index.php?app=ads&amp;act=add">{$lang.add}</a></li>
  </ul>
</div>


  <div class="fontr">{include file=page.top.html}</div>
</div>
<div class="tdare">
  <table width="100%" cellspacing="0" class="dataTable">
    <!--{if $adList}-->
    <tr class="tatr1">
      <td width="20" class="firstCell"><input type="checkbox" class="checkall" /></td>
      <td>广告名称</td>
      <td><span ectype="order_by" fieldname="email">广告位置</span></td>
      <td><span ectype="order_by" fieldname="reg_time">媒介类型</span></td>
      <td><span ectype="order_by" fieldname="last_login">开始日期</span></td>
      <td><span ectype="order_by" fieldname="last_login">结束日期</span></td>
      <td><span ectype="order_by" fieldname="email">点击次数</span></td>
      <td>操作</td>
    </tr>
    <!--{/if}-->
    <!--{foreach from=$adList item=ad}-->
    <tr class="tatr2">
      <td class="firstCell"><input type="checkbox" class="checkitem" value="{$ad.ad_id}" /></td>
      <td>{$ad.ad_name}</td>
      <td>{$ad.position_name}</td>
      <td>{$ad.media_type_name}</td>
      <td>{$ad.start_time}</td>
      <td>{$ad.end_time}</td>
      <td>{$ad.click_count}</td>
     <td class="handler">
      <span style="width: 100px">
      {if $ad.position_id == 0}
      <a href="index.php?app=ads&amp;act=addJs&amp;id={$ad.ad_id}&amp;type={$ad.media_type}">生成JS</a> |
      {/if}
      <a href="index.php?app=ads&amp;act=edit&amp;id={$ad.ad_id}">{$lang.edit}</a> |
      <a href="javascript:drop_confirm('{$lang.drop_confirm}', 'index.php?app=ads&amp;act=drop&amp;id={$ad.ad_id}');">{$lang.drop}</a>
      </span>
      </td>
    </tr>
    <!--{foreachelse}-->
    <tr class="no_data">
      <td colspan="10">{$lang.no_data}</td>
    </tr>
    <!--{/foreach}-->
  </table>
  <!--{if $adList}-->
  <div id="dataFuncs">
    <div id="batchAction" class="left paddingT15"> &nbsp;&nbsp;
      <input class="formbtn batchButton" type="button" value="{$lang.drop}" name="id" uri="index.php?app=ads&act=drop" presubmit="confirm('{$lang.drop_confirm}');" />
    </div>
    <div class="pageLinks">{include file=page.bottom.html}</div>
    <div class="clear"></div>
  </div>
  <!--{/if}-->
</div>
