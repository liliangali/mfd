<script type="text/javascript">
_did = "{$data.id}";
$(function(){

    <!-- {if $linkid} -->
    ajax_cst('{$linkid}');
    <!-- {/if} -->
    
});
function cst_callback(_ids){
    ajax_cst(_ids.ids);
}
function ajax_cst(ids){
    $.ajax({
        url    :"index.php?app=yh_template&act=ajax_customs_info",
        data   :"ids="+ids+"&did="+_did,
        success:function(res){
            $(".panel").html(res);
        }
    });
}
