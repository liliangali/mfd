<script>
var getSMSCode = "";
$(function(){
	$('#mf22').validate({
		errorClass:"error-on",
		success : function(label){
			 label.addClass('error-ok');
		}, 
	    rules : {
	    	authcode : {
	    		 required : true,
		            rangelength:[6,6],
		            digits:true,
			        remote:{
						url: "/index.php/kuke-ajaxAuthcode2.html?category=payps&type=set",     //后台处理程序 
						type: "get",               //数据发送方式
						dataType: "json",           //接受数据格式   
						data: {                     //要传递的数据
							authcode: function() {
								return $("#authcode").val();
							}
						}
					}
	        }
	    },
	    messages : {
	    	authcode : {
	    		required : '验证码不能为空',
	            rangelength:'范围为6-6个数字',
	            digits:'必须输入整数',
	            remote:'验证码错误'
	        }
	    }
	    //submitHandler:function(form){
	    //		alert(2);
	    //		return false;
	   // }
	});  
	
	getSMSCode = function (){
		$.ajax({
			"url":"/index.php/kuke-SMSCodeAjax.html",
			"data": "category=payps&type=set&opt=get" ,
			"type": "GET",
			'dataType':'json',
			"success": function(res) {
				//var res = eval( "(" + res + ")" );
				if(res.err){
					alert('出错:'+res.msg);
				}else{
					$("#getSMS").html(res.msg);
					$("#getSMS").unbind('click');
				}
			}
		});	
	}

	resetSMSCode = function (){
		$.ajax({
			"url":"/index.php/kuke-resetSMSCode.html",
			"data": "phone={$account}&category=payps&type=set&opt=reset" ,
			"type": "GET",
			'dataType':'json',
			"success": function(res) {
				//var res = eval( "(" + res + ")" );
				if(res.err){
					alert('出错:'+res.msg);
				}else{
					$("#getSMS").html(res.msg);
					$("#getSMS").unbind('click');
				}
			}
		});	
	}
	
	
	$("#getSMS").bind('click',getSMSCode);
	
});






</script>
