{include file="header.html"}
<script>
$().ready(function() {
	$("#cat_id").change(function() {
		//alert("aa");
		$("#selectpart").submit();
	})
})

</script>
<div id="rightTop">
    <ul class="subnav">
        <li><span>{$lang.manage}</span></li>
        <li><a class="btn1" href="index.php?app=testsite&amp;act=add">添加</a></li>
    </ul>
</div>

<!-- 查询开始 -->
<div class="mrightTop">
    <div class="fontl">
        <form method="get" name="selectpart" id="selectpart">
        <input type="hidden" name="app" value="testsite" />
        <input type="hidden" name="act" value="index" />
            <div class="left">
                	城市名称:
                <input class="queryInput" type="text" name="city_name" value="{$query.city_name|escape}" />
                <!-- 
                 	分类:
               <select id="cate_id" name="cate_id">
               		 <option value="0">{$lang.select_please}</option> 
                      {html_options options=$parents selected=$cate_id}
               </select> -->
                <input type="submit" class="formbtn" value="{$lang.query}" />
            </div>
      <span>
              </span></form>
    </div>
</div>
<!-- 查询结束 -->

<div class="tdare">
    <table width="100%" cellspacing="0" class="dataTable">
        <!--{if $citys}-->
        <tr class="tatr1">
            <td width="20" class="firstCell"><input type="checkbox" class="checkall" /></td>
            <td align="left"><span ectype="order_by" fieldname="city_name">城市名称</span></td>
            <td align="left"><span ectype="order_by" fieldname="site_name">站点名称</span></td>
            <td class="table-center"><span ectype="order_by" fieldname="sort_order">{$lang.sort_order}</span></td>
            <td class="table-center"><span ectype="order_by" fieldname="is_open">是否开启</span></td>
            <td class="handler">{$lang.handler}</td>
        </tr>
        <!--{/if}-->
        <!--{foreach from=$citys item=city}-->
        <tr class="tatr2">
            <td class="firstCell"><input value="{$city.city_id}" class='checkitem' type="checkbox" /></td>
            <td align="left">
            <span ectype="" fieldname="city_name" fieldid="{$city.city_id}" required="1" class="" title="">{$city.city_name|escape}</span>
            </td>
            <td align="left">
            <span ectype="" fieldname="site_name" fieldid="{$city.city_id}" required="1" class="" title="">{$city.site_name|escape}</span>
            </td>
            <td class="table-center">
            <span ectype="" fieldname="sort_order" fieldid="{$city.city_id}" datatype="pint" maxvalue="255" class="" title="">{$city.sort_order}
            </span>
            </td>
            <td class="table-center">
            <!--{if $city.is_open}-->
            <img src="templates/style/images/positive_enabled.gif" ectype="inline_edit" fieldname="is_open" fieldid="{$city.city_id}" fieldvalue="1" title="{$lang.editable}"/>
            <!--{else}-->
            <img src="templates/style/images/positive_disabled.gif" ectype="inline_edit" fieldname="is_open" fieldid="{$city.city_id}" fieldvalue="0" title="{$lang.editable}"/>
            <!--{/if}-->
            </td>
            <td class="handler">
             <a href="index.php?app=testsite&amp;act=edit&amp;id={$city.city_id}">{$lang.edit}</a>  
        	|<a name="drop" href="javascript:drop_confirm('{$lang.drop_confirm}', 'index.php?app=testsite&amp;act=drop&amp;id={$city.city_id}');">{$lang.drop}</a> 
            </td>
        </tr>
        <!--{foreachelse}-->
        <tr class="no_data">
            <td colspan="7">{$lang.no_data}</td>
        </tr>
        <!--{/foreach}-->
    </table>
    <!--{if $city}-->
    <div id="dataFuncs">
    
        <div id="batchAction" class="left paddingT15">
            <input class="formbtn batchButton" type="button" value="{$lang.drop}" name="id" uri="index.php?app=testsite&act=drop" presubmit="confirm('{$lang.drop_confirm}');" />
        </div>
      
        <div class="pageLinks">
        
            {if $parts}{include file=page.bottom.html}{/if}
        </div>
    </div>
    <!--{/if}-->
    <div class="clear"></div>
</div>
{include file="footer.html"}
