       <h1 class="star{$content.star|default:1}"><span>{$content.ftime}</span></h1>
       <p class="p1">{$content.content}</p>
       {if $content.answer}
       <p class="p2"><span>客服：</span>{$content.answer.content}</p>
      {/if}
      </div>
     </li>
    </ul>
      {/foreach}

